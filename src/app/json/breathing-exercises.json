    ]
  },
  {
    "title": "Pursed-lip breathing",
    "exercises": [
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Relax your upper body"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-in.png",
        "imageAlt": "Breathe in",
        "description": "Inhale through your nose for two full seconds"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Purse your lips as though you are about to whistle"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-out.png",
        "imageAlt": "Breathe out",
        "description": "Exhale slowly (for four seconds) through your pursed lips"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Practice four to five times a day until the breathing pattern becomes second nature"
      }
    ]
  },
  {
    "title": "Alternate nostril breathing",
    "exercises": [
      {
        "image": "/assets/images/breathing-exercises/breathe-out.png",
        "imageAlt": "Breathe out",
        "description": "Sit upright and exhale fully through both nostrils"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Close your right nostril with the thumb of your right hand"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-in.png",
        "imageAlt": "Breathe in",
        "description": "Inhale slowly through the left nostril"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "After a complete inhale, close your left nostril with the little and ring fingers of your right hand"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-out.png",
        "imageAlt": "Breathe out",
        "description": "Lift your right thumb off your right nostril and take a full exhale through the right nostril"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Close your right nostril with your right thumb and release your left nostril"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-in.png",
        "imageAlt": "Breathe in",
        "description": "Inhale through your left nostril"
      },
      {
        "image": "/assets/images/breathing-exercises/breathe-hold.png",
        "imageAlt": "Hold breath",
        "description": "Continue rotating nostrils for up to 15 minutes"
      }
    ]
  },
  {
